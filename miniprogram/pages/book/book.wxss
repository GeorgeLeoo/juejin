.book-img-wrapper{
  width: 80px;
  height: 110px;
  box-shadow: 3px 4px 4px #c1cfda;
}
.book-img {
  width: 80px;
  height: 110px;
  background-size: cover;
}

.shopbtn {
  border-radius: 20px;
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  font-weight: bold;
  background: #f0f7ff;
  color: #047ff8;
  text-align: center;
  position: absolute;
  right: 10px;
  top: 50px;
}

.author {
  font-size: 12px;
  line-height: 30px;
}

.title{
  font-size: 16px;
  font-weight: bold;
}

.gray {
  font-size: 12px;
  color: #c1cfda;
}

.book-item{
  padding: 10px;
  display: flex;
  border-bottom: 1px solid #f5f6fa;
  align-content: center;
  position: relative;
}

.book-item-center{
  padding: 0 10px;
}