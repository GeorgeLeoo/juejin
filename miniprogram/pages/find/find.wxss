.menu{
  background: #0080ff;
  color: #fff;
  font-size: 12px;
  height: 38px;
  box-shadow: 0 1px 1px #ccc;
}
.menu text{
  padding: 0 20px;
  line-height: 36px;
  display: inline-block;
}

.selected{
  border-bottom: 2px solid #fff;
}

.avatar-top{
  width: 40px;
  height: 40px;
  border-radius: 100%;
}

.list-top{
  display: flex;
  align-items: center;
  position: relative;
}

.list-top-txt{
  font-size: 12px;
  color: #bfc7cf;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.attention{
  width: 30px;
  font-size: 12px;
  color: #4cc31c;
  border: 1px solid #4cc31c;
  border-radius: 3px;
  line-height: 28px;
  padding: 0 20px;
  text-align: center;
  position: absolute;
  right: 0;
}
.list-content-txt{
  font-size: 12px;
}

.list-item{
  margin-bottom: 10px;
  padding: 10px;
  background: #fff;
}

.list-content{
 padding: 10px 0;
}

.list-content-img{
  margin-top: 10px;
  width: 160px;
  height: 260px;
}

.list-bot{
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid #bfc7cf;
}